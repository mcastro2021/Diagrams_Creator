{
  "name": "azure-diagram-generator",
  "version": "2.0.0",
  "description": "AI-powered Azure architecture diagram generator - similar to Eraser.io",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm install --production",
    "heroku-postbuild": "npm install --production",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "setup": "node scripts/setup.js",
    "docker:build": "docker build -t azure-diagram-generator .",
    "docker:run": "docker run -p 3001:3001 azure-diagram-generator",
    "docker:dev": "docker-compose up --build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcastro2021/Diagrams_Creator.git"
  },
  "keywords": [
    "azure",
    "diagrams",
    "architecture",
    "ai",
    "nlp",
    "diagram-generator",
    "cloud-architecture"
  ],
  "author": "Manuel Castro",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/mcastro2021/Diagrams_Creator/issues"
  },
  "homepage": "https://github.com/mcastro2021/Diagrams_Creator#readme",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "canvas": "^2.11.2",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "groq-sdk": "^0.7.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  }
}
